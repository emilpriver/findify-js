    "postinstall": "yarn build:lib",
    "precommit": "run-s lint test",
    "rebuild": "run-s clean build",
    "release": "lerna release --yes",
    "test": "lerna run test --parallel",
    "test:watch": "lerna run test:watch --parallel"
